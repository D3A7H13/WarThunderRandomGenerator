    <ControlTemplate x:Key="Britain" TargetType="{x:Type CheckBox}">
        <Rectangle x:Name="rectangle" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" d:DesignWidth="51" d:DesignHeight="27" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="0.5" Y="0.5"/>
                </TransformGroup>
            </Rectangle.RenderTransform>
            <Rectangle.Fill>
                <ImageBrush ImageSource="Images/ResourcePics/Brit Flag Faded.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <ControlTemplate.Triggers>
            <Trigger Property="CheckBox.IsChecked" Value="True">
                <Setter Property="Fill" TargetName="rectangle">
                    <Setter.Value>
                        <ImageBrush ImageSource="Images/ResourcePics/Brit Flag.png"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <Style x:Key="BritainStyle" TargetType="{x:Type CheckBox}">
        <Setter Property="Template" Value="{StaticResource Britain}"/>
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
    </Style>

